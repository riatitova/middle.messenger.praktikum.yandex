<div class='registration-page'>
  <div class='registration'>
    <h2 class='registration__header'>
      Registration
    </h2>
    <form class='registration__form'>
      <input
        class='registration__mail registration__input'
        type='text'
        name='mail'
        id='mail'
        placeholder='mail'
      />
      <input
        class='registration__login registration__input'
        type='text'
        name='login'
        id='login'
        placeholder='login'
      />
      <input
        class='registration__name registration__input'
        type='text'
        name='name'
        id='name'
        placeholder='name'
      />
      <input
        class='registration__last-name registration__input'
        type='text'
        name='last-name'
        id='last-name'
        placeholder='last-name'
      />
      <input
        class='registration__phone registration__input'
        type='text'
        name='phone'
        id='phone'
        placeholder='phone'
      />
      <input
        class='registration__password registration__input'
        type='text'
        name='password'
        id='password'
        placeholder='password'
      />
      <input
        class='registration__password-again registration__input'
        type='text'
        name='password-again'
        id='password-again'
        placeholder='password-again'
      />
      <button class='registration__button' type='submit'>Sign up</button>
    </form>
    <a class='registration__link' href='#'>Log in</a>
  </div>
</div>
