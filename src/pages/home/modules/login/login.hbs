<div class='login-page'>
  <div class='login'>
    <h2 class='login__header'>
      Enter
    </h2>
    <form class='login__form'>
      <input
        class='login__login login__input'
        type='text'
        name='login'
        id='login'
        placeholder='login'
      />
      <input
        class='login__password login__input'
        type='text'
        name='password'
        id='password'
        placeholder='password'
      />
      <button class='login__button' type='submit'>Sign in</button>
    </form>
    <a class='login__link' href='#'>Register</a>
  </div>
</div>
